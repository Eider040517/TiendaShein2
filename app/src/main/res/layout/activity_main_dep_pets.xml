<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity_Dep_Pets">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:onClick="cambiar_menu"
                android:text="Home"
                android:textColor="#3F51B5"
                android:textColorLink="#00FFFFFF"
                android:textSize="20sp" />

            <Space
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_view_name_home2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/txt_name_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView30"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="34dp"
            android:text="@string/name_tv_dep_pets"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="210dp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="332dp"
                    app:srcCompat="@drawable/f10petsjuguetes" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Juguetes para perros, ideales para mantener a tu mascota entretenida y activa.\nMaterial: Plástico resistente y seguro para mascotas\nIncluye: Diversos juguetes para morder y jugar\nPrecio: $15.00\nInstrucciones de cuidado: Lavar con agua y jabón después de cada uso.\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/f11petscollar" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Collar de identificación para mascotas, asegura la seguridad de tu perro en caso de extravío.\nMaterial: Nylon resistente\nTallas: S, M, L\nPrecio: $10.00\nInstrucciones de cuidado: Limpiar con un paño húmedo.\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/f12petsplato" />
                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Plato de alimentación para perros, resistente y fácil de limpiar.\nMaterial: Plástico no tóxico\nDimensiones: Diámetro 20 cm\nPrecio: $5.00\nInstrucciones de cuidado: Lavable en lavavajillas o con agua y jabón.\n\n\n"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/f13petsalimento" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Comida para perros de todas las edades, balanceada y nutritiva.\nMarca: Doggy Delights\nVariantes: Pollo, carne, pescado\nPrecio: $20.00\nInstrucciones de uso: Seguir las indicaciones del envase para la cantidad adecuada según el peso del perro.\n\n\n"
                    android:textSize="16sp" />



            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>