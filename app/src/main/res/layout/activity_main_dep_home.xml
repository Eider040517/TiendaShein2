<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity_Dep_Home">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:onClick="cambiar_menu"
                android:text="Home"
                android:textColor="#3F51B5"
                android:textColorLink="#00FFFFFF"
                android:textSize="20sp" />

            <Space
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_name_home"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:text="Nombre"
                android:textSize="24sp" />

        </TableRow>

    </TableLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/txt_name_home2"
            android:layout_width="293dp"
            android:layout_height="50dp"
            android:layout_below="@+id/textView30"
            android:layout_alignParentStart="true"
            android:layout_alignParentEnd="true"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/name_tv_dep_home"
            android:textSize="24sp"
            android:textStyle="bold" />

    </RelativeLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="210dp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="332dp"
                    app:srcCompat="@drawable/d10homeflorero" />

                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Florero de cristal elegante, ideal para decorar cualquier espacio.\nMaterial: Cristal\nTamaño: 30 cm de alto\nPrecio: $25.00\nInstrucciones de cuidado: Limpiar con un paño suave.\n\n\n\n"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/d11homelicuadora" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Licuadora de alta potencia, perfecta para preparar jugos y batidos.\nMaterial: Plástico resistente\nPotencia: 1000W\nPrecio: $60.00\nInstrucciones de cuidado: Desmontar las piezas y lavar a mano con agua tibia.\n\n\n"
                    android:textSize="16sp" />






                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/d12homeplantadecorativa" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Planta decorativa artificial, perfecta para añadir un toque de verde a cualquier espacio.\nMaterial: Plástico y tela\nAltura: 60 cm\nPrecio: $20.00\nInstrucciones de cuidado: Limpiar con un paño seco.\n\n\n"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/d13homesillon" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Sillón cómodo y elegante, ideal para relajarse en el hogar.\nMaterial: Tela y madera\nDimensiones: 80 cm x 90 cm x 100 cm\nPrecio: $150.00\nInstrucciones de cuidado: Limpiar con un paño húmedo.\n\n\n"
                    android:textSize="16sp" />



                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/d14homelampara" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Lámpara de pared moderna con luz LED, perfecta para iluminar cualquier habitación.\nMaterial: Metal y plástico\nDimensiones: 30 cm x 20 cm\nPrecio: $40.00\nInstrucciones de cuidado: Limpiar con un paño seco.\n\n\n"
                    android:textSize="16sp" />








                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/d15homelampara" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Lámpara de mesa moderna con base de metal y pantalla de tela, perfecta para iluminar tu espacio de trabajo o estudio.\nMaterial: Metal y tela\nDimensiones: 40 cm x 20 cm\nPrecio: $45.00\nInstrucciones de cuidado: Limpiar con un paño seco.\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/d16homeherramientas" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Juego de herramientas completo con destornilladores, llaves y otras herramientas básicas, perfecto para tareas de bricolaje en el hogar.\nMaterial: Acero y plástico\nIncluye: Destornilladores, llaves inglesas, alicates, martillo, etc.\nPrecio: $70.00\nInstrucciones de cuidado: Limpiar con un paño seco después de cada uso.\n\n\n"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/d17hometelefonoantiguo" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Teléfono antiguo de estilo retro con marcación rotativa, perfecto para añadir un toque vintage a tu decoración.\nMaterial: Plástico y metal\nDimensiones: 20 cm x 15 cm x 30 cm\nPrecio: $55.00\nInstrucciones de cuidado: Limpiar con un paño seco.\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/d18hometrapeador" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Trapeador moderno con diseño ergonómico y cabeza giratoria, ideal para limpieza eficiente en el hogar.\nMaterial: Microfibra y acero inoxidable\nDimensiones: 120 cm x 30 cm\nPrecio: $25.00\nInstrucciones de cuidado: Lavar a mano con agua tibia y detergente suave.\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/d19homemesadesala" />
                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Mesa de centro de comedor de estilo contemporáneo, con superficie de vidrio templado y base de acero inoxidable, perfecta para tu sala de estar o comedor.\nMaterial: Vidrio templado y acero inoxidable\nDimensiones: 120 cm x 60 cm x 40 cm\nPrecio: $150.00\nInstrucciones de cuidado: Limpiar con un paño suave y limpiador para vidrios.\n\n\n"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>