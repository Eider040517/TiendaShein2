<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity_Dep_Child">


    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center">

            <Button
                android:id="@+id/button2"
                android:layout_width="110dp"
                android:layout_height="wrap_content"
                android:background="#00FFFFFF"
                android:onClick="cambiar_menu"
                android:text="Home"
                android:textColor="#3F51B5"
                android:textColorLink="#00FFFFFF"
                android:textSize="20sp" />

            <Space
                android:layout_width="150dp"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/txt_view_name_child"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:text="Nombre"
                android:textSize="20sp" />

        </TableRow>

    </TableLayout>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="80dp">

        <TextView
            android:id="@+id/txt_name_home"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="15dp"
            android:text="@string/name_tv_dep_child"
            android:textSize="24sp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="210dp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView1"
                    android:layout_width="wrap_content"
                    android:layout_height="332dp"
                    app:srcCompat="@drawable/c10childconjuntocasual" />
                <TextView
                    android:id="@+id/textView1"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Conjunto casual para niños, perfecto para cualquier ocasión.\nMaterial: 100% algodón\nTallas: 2, 4, 6, 8\nPrecio: $35.00\nInstrucciones de cuidado: Lavar a máquina con agua fría.\n\n\n\n"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/imageView2"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/c11childconjuntoshort" />

                <TextView
                    android:id="@+id/textView2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Conjunto de shorts para niños, ideal para el verano.\nMaterial: 100% algodón\nTallas: 2, 4, 6, 8\nPrecio: $25.00\nInstrucciones de cuidado: Lavar a máquina en ciclo suave.\n\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView3"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/c12childcojuntocasual" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Conjunto casual para niños, cómodo y moderno.\nMaterial: 100% algodón\nTallas: 2, 4, 6, 8\nPrecio: $30.00\nInstrucciones de cuidado: Lavar a máquina con colores similares.\n\n\n\n"
                    android:textSize="16sp" />









                <ImageView
                    android:id="@+id/imageView4"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/c13childtrajedenina" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Traje de niña, ideal para ocasiones especiales.\nMaterial: 100% algodón\nTallas: 2, 4, 6, 8\nPrecio: $40.00\nInstrucciones de cuidado: Lavar a mano con agua fría y secar al aire.\n\n\n\n"
                    android:textSize="16sp" />




                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/c14childconjuntodebebe" />
                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Conjunto de bebé, perfecto para los más pequeños.\nMaterial: 100% algodón orgánico\nTallas: 0-3 meses, 3-6 meses, 6-9 meses\nPrecio: $25.00\nInstrucciones de cuidado: Lavar a máquina con detergente suave y secar al aire.\n\n\n\n"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/c15childabrigodelana" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Abrigo de lana para niño, ideal para los días fríos.\nMaterial: Lana de alta calidad\nTallas: 2T, 3T, 4T, 5T\nPrecio: $60.00\nInstrucciones de cuidado: Lavar a mano con detergente suave y secar en plano.\n\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/c16childabrigoparaelfrio" />

                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Abrigo para el frío de niño, con forro polar y capucha.\nMaterial: Exterior de poliéster, forro de algodón\nTallas: 3T, 4T, 5T, 6T\nPrecio: $70.00\nInstrucciones de cuidado: Lavar a máquina con agua fría y secar en secadora a baja temperatura.\n\n\n\n"
                    android:textSize="16sp" />
                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/c17childcaporte" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Capote para la lluvia de niños, con diseño divertido y resistente al agua.\nMaterial: PVC resistente al agua\nTallas: 2T, 4T, 6T, 8T\nPrecio: $25.00\nInstrucciones de cuidado: Limpiar con un paño húmedo.\n\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/c18childropadepanadero" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Conjunto de panadero para niños, perfecto para jugar o ayudar en la cocina.\nMaterial: Mezcla de algodón y poliéster\nTallas: 2T, 4T, 6T, 8T\nPrecio: $35.00\nInstrucciones de cuidado: Lavar a máquina con colores similares.\n\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/c19childconjuntodenina" />

                <TextView
                android:id="@+id/textView10"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Descripción: Conjunto de niña, ideal para ocasiones especiales.\nMaterial: 100% algodón\nTallas: 2, 4, 6, 8\nPrecio: $45.00\nInstrucciones de cuidado: Lavar a mano con agua fría y secar al aire.\n\n\n\n"
                android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>