<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity_Dep_Men">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="153dp"
        android:orientation="vertical">

        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="108dp"
            android:layout_marginTop="24dp"
            android:text="@string/name_tienda"
            android:textSize="34sp" />

        <TextView
            android:id="@+id/text_view_name_men"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="TextView"
            android:textSize="20sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="132dp"
            android:layout_marginTop="8dp"
            android:text="@string/name_tv_dep_men"
            android:textSize="24sp" />

    </LinearLayout>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ScrollView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            tools:ignore="MissingConstraints"
            tools:layout_editor_absoluteX="34dp"
            tools:layout_editor_absoluteY="210dp">

            <LinearLayout

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <ImageView
                    android:id="@+id/imageView5"
                    android:layout_width="wrap_content"
                    android:layout_height="332dp"
                    app:srcCompat="@drawable/a10menconjunto" />

                <TextView
                    android:id="@+id/textView3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Descripción: \nConjunto formal para hombre,\nperfecto para ocasiones especiales.\nMaterial: 100% algodón\nTallas: S, M, L, XL\nPrecio: $120.00\nInstrucciones de cuidado: Lavar a mano con agua fría.\n\n\n\"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView6"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/a11mencamisa" />

                <TextView
                    android:id="@+id/textView4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Camisa casual para hombre, ideal para el día a día.\nMaterial: 65% poliéster, 35% algodón\nTallas: S, M, L, XL\nPrecio: $45.00\nInstrucciones de cuidado: Lavado a máquina con colores similares.\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView7"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/a12mencamisaabierta" />

                <TextView
                    android:id="@+id/textView5"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Camisa de vestir con diseño moderno.\nMaterial: 70% algodón, 30% lino\nTallas: S, M, L, XL\nPrecio: $55.00\nInstrucciones de cuidado: Lavado en seco recomendado.\n\n\n\n"
                    android:textSize="16sp"
                    tools:ignore="DuplicateIds" />


                <ImageView
                    android:id="@+id/imageView9"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/a14mencorrea" />

                <TextView
                    android:id="@+id/textView6"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Correa de cuero para hombre, ajustable y elegante.\nMaterial: Cuero genuino\nTallas: Única\nPrecio: $30.00\nInstrucciones de cuidado: Limpiar con un paño seco.\n\n\n\n"
                    android:textSize="16sp" />




                <ImageView
                    android:id="@+id/imageView8"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/a13menpantalon" />
                <TextView
                    android:id="@+id/textView7"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Pantalón de vestir clásico para hombre, ideal para el trabajo o eventos formales.\nMaterial: 100% lana\nTallas: S, M, L, XL\nPrecio: $75.00\nInstrucciones de cuidado: Lavar en seco.\n\n\n\n"
                    android:textSize="16sp" />


                <ImageView
                    android:id="@+id/imageView10"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/a15menzapatos" />

                <TextView
                    android:id="@+id/textView8"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Zapatos de vestir de cuero para hombre, cómodos y elegantes.\nMaterial: Cuero genuino\nTallas: 40, 41, 42, 43, 44\nPrecio: $85.00\nInstrucciones de cuidado: Limpiar con un paño húmedo y aplicar cera para cuero.\n\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView11"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/a16menjeans" />

                <TextView
                    android:id="@+id/textView9"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Jeans clásicos para hombre, perfectos para un look casual.\nMaterial: 98% algodón, 2% elastano\nTallas: S, M, L, XL\nPrecio: $50.00\nInstrucciones de cuidado: Lavado a máquina con colores similares.\n\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView12"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/a17mensueterazul" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Suéter de cuello V para hombre, ideal para climas fríos.\nMaterial: 100% lana merino\nTallas: S, M, L, XL\nPrecio: $60.00\nInstrucciones de cuidado: Lavar a mano con agua fría y secar al aire.\n\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView13"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/a18menzapatosazules" />

                <TextView
                    android:id="@+id/textView11"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Zapatos elegantes de piel de cocodrilo para hombre.\nMaterial: Piel de cocodrilo auténtica\nTallas: 40, 41, 42, 43, 44\nPrecio: $200.00\nInstrucciones de cuidado: Limpiar con un paño húmedo y aplicar crema para cuero.\n\n\n\n"
                    android:textSize="16sp" />

                <ImageView
                    android:id="@+id/imageView14"
                    android:layout_width="wrap_content"
                    android:layout_height="300dp"
                    app:srcCompat="@drawable/a19menzapatillas" />

                <TextView
                    android:id="@+id/textView12"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Descripción: Zapatillas deportivas para hombre, cómodas y ligeras.\nMaterial: Malla y suela de goma\nTallas: 40, 41, 42, 43, 44\nPrecio: $70.00\nInstrucciones de cuidado: Lavado a máquina en ciclo suave.\n\n\n\n"
                    android:textSize="16sp" />
            </LinearLayout>
        </ScrollView>
    </RelativeLayout>


</LinearLayout>